{
  "enabled": true,
  "dependencyDashboard": true,
  "dependencyDashboardTitle": "Renovate Dashboard",
  "commitMessageSuffix": "[ci-skip]",
  "suppressNotifications": ["prIgnoreNotification"],
  "rebaseWhen": "conflicted",
  "repositories": ["Marx2/homelab"],
  "baseBranches": ["master"],
  "ignorePaths": ["ansible/"],
  "kubernetes": {
    "fileMatch": ["cluster/.+\\.yaml$"],
    "ignorePaths": [
      "cluster/flux-system/"
    ]
  },
  "helm-values": {
    "fileMatch": ["cluster/.+\\.yaml$"]
  },
  "regexManagers": [
    {
      "fileMatch": ["cluster/.+\\.yaml$"],
      "matchStrings": [
        "registryUrl=(?<registryUrl>.*?)\n *chart: (?<depName>.*?)\n *version: (?<currentValue>.*)\n"
      ],
      "datasourceTemplate": "helm"
    }
  ],
  "autodiscover": false,
  "dryRun": false,
  "packageRules": [
    // Setup datasources
    {
      "datasources": ["helm"],
      "commitMessageTopic": "Helm chart {{depName}}",
      "separateMinorPatch": true
    },
    // Add labels according to package and update types
    {
      "datasources": ["docker"],
      "groupName": "homelab - major change",
      "automerge": false,
      "updateTypes": ["major"],
      "labels": ["renovate/image-release", "dependency/major"]
    },
    {
      "datasources": ["docker"],
      "groupName": "homelab - minor change",
      "automerge": false,
      "updateTypes": ["minor"],
      "labels": [
        "renovate/image-release",
        "dependency/minor"
      ]
    },
    {
      "datasources": ["docker"],
      "groupName": "homelab - patch change",
      "automerge": false,
      "updateTypes": ["patch"],
      "labels": [
        "renovate/image-release",
        "dependency/patch"
      ]
    },
    {
      "datasources": ["docker"],
      "automergeType": "branch",
      "requiredStatusChecks": null,
      "separateMinorPatch": true
    },
    {
      "datasources": ["helm"],
      "updateTypes": ["major"],
      "labels": ["renovate/helm-release", "dependency/major"]
    },
    {
      "datasources": ["helm"],
      "updateTypes": ["minor"],
      "labels": ["renovate/helm-release", "dependency/minor"]
    },
    {
      "datasources": ["helm"],
      "updateTypes": ["patch"],
      "labels": ["renovate/helm-release", "dependency/patch"]
    }
  ]
}
